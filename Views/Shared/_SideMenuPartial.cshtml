@model IEnumerable<BugTracker.Models.Notification>

<nav id="sidebar" class="shadow bg-white navbar-light">
    <div class="custom-menu">
        <button type="button" id="sidebarCollapse" class="btn btn-warning">
            <i class="fa fa-bars"></i>
            <span class="sr-only">Toggle Menu</span>
        </button>
    </div>
    <div class="bg-light border-bottom border-warning p-4">
        <h1><a href="/" class="logo text-warning"><i class="fas fa-bug"></i> bug tracker</a></h1>
    </div>
    <div class="p-4">
        <ul class="list-unstyled navbar-nav">
            <li class="nav-item">
                <a href="/Dashboard" class="nav-link border-bottom shadow-sm pl-3"><i class="fas fa-chart-pie pr-3"></i> Dashboard</a>
            </li>
            <li class="nav-item">
                <a href="/Projects" class="nav-link border-bottom shadow-sm pl-3"><i class="fas fa-project-diagram pr-3"></i> Projects</a>
            </li>
            <li class="nav-item">
                <a href="/Notifications" class="nav-link border-bottom shadow-sm pl-3">
                    <i class="fas fa-bell pr-3"></i>
                    Notifications
                    @if (Model.Any())
                    {
                        <span class="badge rounded badge-warning">@Model.Count()</span>
                    }
                </a>
            </li>
        </ul>
    </div>
</nav>