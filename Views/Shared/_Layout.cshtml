<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Bug Tracker</title>
    <link href="https://fonts.googleapis.com/css?family=Righteous&display=swap" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://kit.fontawesome.com/a2cbb46ec8.js" crossorigin="anonymous"></script>

</head>
<body>

    <div class="navbar navbar-expand-lg fixed-top navbar-light bg-white shadow">
        <div class="container-fluid">
            <a class="navbar-brand ml-5 text-warning" href="/"><i class="fas fa-bug"></i> bug tracker</a>
            <button class="navbar-toggler ml-auto" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="wrapper d-flex align-items-stretch">
        <nav id="sidebar" class="shadow bg-white navbar-light">
            <div class="custom-menu">
                <button type="button" id="sidebarCollapse" class="btn btn-warning">
                    <i class="fa fa-bars"></i>
                    <span class="sr-only">Toggle Menu</span>
                </button>
            </div>
            <div class="bg-light border-bottom border-warning p-4">
                <h1><a href="/" class="logo text-warning"><i class="fas fa-bug"></i> bug tracker</a></h1>
            </div>
            <div class="p-4">
                <ul class="list-unstyled navbar-nav">
                    <li class="nav-item">
                        <a href="/Dashboard" class="nav-link border-bottom shadow-sm pl-3"><i class="fas fa-chart-pie pr-3"></i> Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a href="/Projects" class="nav-link border-bottom shadow-sm pl-3"><i class="fas fa-project-diagram pr-3"></i> Projects</a>
                    </li>   
                </ul>
            </div>
        </nav>

        <!-- Page Content  -->
        <div id="content" class="p-4 p-md-5 pt-5">
            <div class="container-fluid body-content pt-5">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Bug Tracker made by Jordan McCollam using ASP.NET</p>
                </footer>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/lib")
    @RenderSection("scripts", required: false)
</body>
</html>
