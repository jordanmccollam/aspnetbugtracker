@model IEnumerable<BugTracker.Models.Notification>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2><i class="fas fa-bell"></i> Notifications</h2>

<div class="row">
    <div class="col-12">
        <div class="border-bottom border-warning pt-3">
            <h4 class="text-right text-warning slide-in-left d-none d-md-block"><i class="fas fa-bell"></i> Unread Notifications</h4>
            <h6 class="text-warning slide-in-left d-md-none"><i class="fas fa-bell"></i> Notifications</h6>
        </div>

        <table class="table table-warning table-hover">
            <tbody>
                @if (Model.Any())
                {
                    foreach (var notification in Model)
                    {
                        <tr class="justify-content-between d-flex">
                            <td>@notification.Message</td>
                            <td><a href="/notifications/read/@notification.Id" class="btn btn-sm btn-warning rounded">Got it!</a></td>
                        </tr>
                    }
                } else
                {
                    <tr>
                        <td>No Unread Notifications</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

